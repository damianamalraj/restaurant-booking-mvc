@{
  ViewData["Title"] = "Admin Booking";
}

<div class="container">
    <a asp-action="Create" class="btn btn-success">Create</a>

    <h1 class="mb-4">Admin Booking</h1>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Table number: @item.TableNumber</h5>
                        <p class="card-text">Name: @item.CustomerName</p>
                        <p class="card-text">Email: @item.CustomerEmail</p>
                        <p class="card-text">People: @item.NumberOfPeople</p>
                        <p class="card-text">Booking start time:<br/> @item.StartBookingDateTime</p>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
